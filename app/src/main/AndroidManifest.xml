<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.nikbird.innopolis.datacentermonitor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ActivityDataCenter" />

        <service
            android:name=".services.ServiceDataCenterListener"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.ServiceDataCenter"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".activities.newgen.ActivityDataCenter"></activity>
    </application>

</manifest>